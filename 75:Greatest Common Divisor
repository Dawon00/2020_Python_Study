m = int(input('정수 m 을 입력해주세요. '))
n = int(input('정수 n 을 입력해주세요. '))
d = m #최대공약수 d

if m > n: #m이 더 크다면
    d = n #더 작은 n을 최대공약수로

while 1:
    if m % d == 0 and n % d == 0: #두 수가 d로 나누어 떨어지면
        print("두 수의 최대공약수는", d) #최대공약수 확정
        break
    else: #나누어 떨어지지 않는다면
        d -= 1 #최대공약수를 하나씩 줄여가면서 나누어 떨어질때까지 반복
